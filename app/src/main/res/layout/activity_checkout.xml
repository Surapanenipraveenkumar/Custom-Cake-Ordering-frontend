<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F8">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            app:tint="#111827"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Back to Cart"
            android:textSize="16sp"
            android:textColor="#111827"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== ORDER DETAILS CARD ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Order Details Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <!-- Delivery Method Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Delivery Method"
                        android:textSize="14sp"
                        android:textColor="#374151"/>

                    <!-- Delivery Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Home Delivery Option -->
                        <LinearLayout
                            android:id="@+id/optionDelivery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/bg_delivery_option"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_location"
                                app:tint="#EC4899"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Home Delivery"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹50 fee"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>
                        </LinearLayout>

                        <!-- Pickup Option -->
                        <LinearLayout
                            android:id="@+id/optionPickup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/bg_delivery_option_selected"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_pickup"
                                app:tint="#EC4899"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Pickup"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Delivery Address Section (visible only for Home Delivery) -->
                    <LinearLayout
                        android:id="@+id/addressSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Delivery Address"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#374151"/>

                            <TextView
                                android:id="@+id/btnAddAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="+ Add New"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#EC4899"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>
                        </LinearLayout>

                        <!-- No Saved Addresses Message -->
                        <TextView
                            android:id="@+id/tvNoAddresses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:padding="20dp"
                            android:gravity="center"
                            android:text="No saved addresses.\nAdd a new address to continue."
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:background="@drawable/bg_input_field"
                            android:visibility="gone"/>

                        <!-- Saved Addresses List -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerAddresses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:nestedScrollingEnabled="false"/>

                        <!-- Address Loading Progress -->
                        <ProgressBar
                            android:id="@+id/addressProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <!-- When do you need it? -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="When do you need it?"
                        android:textSize="14sp"
                        android:textColor="#374151"/>

                    <!-- Date and Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Date Picker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>

                            <LinearLayout
                                android:id="@+id/btnSelectDate"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="12dp"
                                android:background="@drawable/bg_input_field"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvSelectedDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Select date"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Time Picker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>

                            <LinearLayout
                                android:id="@+id/btnSelectTime"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="12dp"
                                android:background="@drawable/bg_input_field"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_clock"
                                    app:tint="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvSelectedTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Select time"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:background="#E5E7EB"/>

                    <!-- Order Summary Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#374151"/>

                    <!-- Order Items Container -->
                    <LinearLayout
                        android:id="@+id/orderItemsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"/>

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textSize="14sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textSize="14sp"
                            android:textColor="#111827"/>
                    </LinearLayout>

                    <!-- Delivery Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textSize="14sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tvDeliveryFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textSize="14sp"
                            android:textColor="#111827"/>
                    </LinearLayout>

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#374151"/>

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#EC4899"/>
                    </LinearLayout>

                    <!-- Proceed to Payment Button -->
                    <Button
                        android:id="@+id/btnPayment"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="24dp"
                        android:text="Proceed to Payment"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:backgroundTint="#EC4899"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="26dp"/>

                    <!-- Demo Notice -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Payment processing is simulated in this demo"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF"
                        android:gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
