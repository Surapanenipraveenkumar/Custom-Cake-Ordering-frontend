<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_purple"
            android:padding="24dp"
            android:paddingBottom="40dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/btnBack"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <!-- Baker Icon -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="16dp"
                    android:src="@drawable/ic_baker_avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join as Baker"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create your bakery account"
                    android:textSize="14sp"
                    android:textColor="#E9D5FF"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Registration Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Image Upload -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_avatar_pink"
                            android:padding="24dp"
                            android:src="@drawable/ic_baker_avatar"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/btnPickImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/bg_circle_purple"
                            android:src="@drawable/ic_camera"
                            android:padding="6dp"
                            app:tint="@android:color/white" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to add profile photo"
                        android:textSize="13sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Shop Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151" />

                <EditText
                    android:id="@+id/etShopName"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Enter your bakery name"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="text" />

                <!-- Owner Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Enter your full name"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPersonName" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Enter your email"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="textEmailAddress" />

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Enter your phone number"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="phone" />

                <!-- Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Create a password"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword" />

                <!-- Confirm Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Confirm your password"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword" />

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Enter your shop address"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

                <!-- Location Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Location (GPS)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvLocationStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“ Location not set"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />

                    <Button
                        android:id="@+id/btnSetLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:text="ðŸ“ Set Location"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#10B981"
                        app:cornerRadius="12dp"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

                <!-- Specialty -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialty"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/spinnerSpecialty"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:paddingHorizontal="12dp" />

                <!-- Years of Experience -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years of Experience"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etYearsExperience"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="e.g. 5"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#111827"
                    android:paddingHorizontal="16dp"
                    android:inputType="number" />

                <!-- Create Account Button -->
                <Button
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Create Account"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#A855F7"
                    app:cornerRadius="16dp" />

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textSize="14sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/txtLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#A855F7" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
