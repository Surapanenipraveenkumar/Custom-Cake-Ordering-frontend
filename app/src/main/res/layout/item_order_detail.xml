<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_info_row">

    <ImageView
        android:id="@+id/imgCake"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_cake"
        android:background="@drawable/bg_rounded_image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCakeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Cake"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="12sp"
            android:textColor="#6B7280"/>

        <TextView
            android:id="@+id/tvCustomization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customizations"
            android:textSize="11sp"
            android:textColor="#9CA3AF"
            android:visibility="gone"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹3600"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#EC4899"/>

</LinearLayout>
