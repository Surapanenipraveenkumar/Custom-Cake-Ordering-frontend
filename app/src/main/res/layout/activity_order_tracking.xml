<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F8">

    <!-- ===== HEADER ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_pink"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Track Order"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== ORDER ID CARD (for delivery verification) ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Order ID"
                        android:textSize="14sp"
                        android:textColor="#6B7280"/>

                    <!-- Large Order ID for easy verification -->
                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ORD00000001"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#EC4899"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Show this ID to delivery person"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF"/>

                    <!-- QR Code placeholder for future -->
                    <View
                        android:id="@+id/qrCodePlaceholder"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_qr_placeholder"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== ORDER STATUS CARD ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦ Order Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <!-- Current Status -->
                    <TextView
                        android:id="@+id/tvCurrentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="In Progress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#10B981"/>

                    <!-- Tracking Progress Steps -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <!-- Step 1: Order Placed -->
                        <LinearLayout
                            android:id="@+id/step1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <View
                                    android:id="@+id/dot1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/bg_step_completed"/>

                                <View
                                    android:id="@+id/line1"
                                    android:layout_width="3dp"
                                    android:layout_height="40dp"
                                    android:background="#E5E7EB"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStep1Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Order Placed"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#111827"/>

                                <TextView
                                    android:id="@+id/tvStep1Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="31 Dec 2024, 10:00 AM"
                                    android:textSize="12sp"
                                    android:textColor="#9CA3AF"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Step 2: Order Confirmed -->
                        <LinearLayout
                            android:id="@+id/step2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <View
                                    android:id="@+id/dot2"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/bg_step_pending"/>

                                <View
                                    android:id="@+id/line2"
                                    android:layout_width="3dp"
                                    android:layout_height="40dp"
                                    android:background="#E5E7EB"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStep2Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Order Confirmed"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvStep2Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:textSize="12sp"
                                    android:textColor="#9CA3AF"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Step 3: Preparing -->
                        <LinearLayout
                            android:id="@+id/step3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <View
                                    android:id="@+id/dot3"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/bg_step_pending"/>

                                <View
                                    android:id="@+id/line3"
                                    android:layout_width="3dp"
                                    android:layout_height="40dp"
                                    android:background="#E5E7EB"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStep3Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Preparing Your Cake"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvStep3Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:textSize="12sp"
                                    android:textColor="#9CA3AF"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Step 4: Out for Delivery -->
                        <LinearLayout
                            android:id="@+id/step4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <View
                                    android:id="@+id/dot4"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/bg_step_pending"/>

                                <View
                                    android:id="@+id/line4"
                                    android:layout_width="3dp"
                                    android:layout_height="40dp"
                                    android:background="#E5E7EB"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStep4Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Out for Delivery"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvStep4Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:textSize="12sp"
                                    android:textColor="#9CA3AF"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Step 5: Delivered -->
                        <LinearLayout
                            android:id="@+id/step5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/dot5"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/bg_step_pending"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStep5Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Delivered"
                                    android:textSize="14sp"
                                    android:textColor="#6B7280"/>

                                <TextView
                                    android:id="@+id/tvStep5Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:textSize="12sp"
                                    android:textColor="#9CA3AF"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== DELIVERY INFO CARD ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸšš Delivery Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="#EC4899"/>

                        <TextView
                            android:id="@+id/tvDeliveryAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="123 Main Street, City"
                            android:textSize="14sp"
                            android:textColor="#374151"/>
                    </LinearLayout>

                    <!-- Date & Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#EC4899"/>

                            <TextView
                                android:id="@+id/tvDeliveryDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="31 Dec 2024"
                                android:textSize="14sp"
                                android:textColor="#374151"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_time"
                                app:tint="#EC4899"/>

                            <TextView
                                android:id="@+id/tvDeliveryTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="11:00 AM"
                                android:textSize="14sp"
                                android:textColor="#374151"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== AMOUNT CARD ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’³ Total Amount"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹3650"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#EC4899"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== CONTACT BAKER BUTTON ===== -->
            <Button
                android:id="@+id/btnContactBaker"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="ðŸ“ž Contact Baker"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#EC4899"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"/>

            <!-- ===== CANCEL ORDER BUTTON ===== -->
            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="âŒ Cancel Order"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#EF4444"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
