<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6FFFA">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Baker Info -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/bg_circle"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baker Dashboard"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/txtShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweet Delights Bakery"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Back to Dashboard -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="â† Back to Dashboard"
            android:textColor="#6B7280"
            android:textSize="14sp"/>

        <!-- Orders Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Orders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAllOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="All Orders"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#3B82F6"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnPending"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Pending"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E5E7EB"
                    android:textColor="#374151"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnInProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="In Progress"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E5E7EB"
                    android:textColor="#374151"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnReady"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ready"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E5E7EB"
                    android:textColor="#374151"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Delivered"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#E5E7EB"
                    android:textColor="#374151"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Orders List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- Empty State -->
    <TextView
        android:id="@+id/txtEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No orders found"
        android:textColor="#9CA3AF"
        android:textSize="16sp"
        android:visibility="gone"/>

</LinearLayout>
